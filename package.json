{
    "name": "rpm-spec",
    "displayName": "RPM spec",
    "description": "RPM spec support for Visual Studio Code",
    "icon": "images/rpm.png",
    "version": "0.3.3",
    "license": "MIT",
    "publisher": "shaba",
    "engines": {
        "vscode": ">=1.100.0",
        "node": ">=20"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shaba/vscode-rpm-spec.git"
    },
    "bugs": {
        "url": "https://github.com/shaba/vscode-rpm-spec/issues"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "main": "./out/src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "rpm-spec",
                "aliases": [
                    "RPM spec",
                    "RPMSpec"
                ],
                "extensions": [
                    ".spec",
                    ".spec.template"
                ],
                "configuration": "./rpm-spec.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rpm-spec",
                "scopeName": "source.spec",
                "path": "./syntaxes/spec.json"
            }
        ],
        "configuration": {
            "title": "RPM spec configuration",
            "properties": {
                "rpmspec.lint": {
                    "type": "boolean",
                    "default": true,
                    "description": "Lint RPM spec files with rpmlint",
                    "scope": "machine"
                },
                "rpmspec.rpmlintPath": {
                    "type": "string",
                    "default": "rpmlint",
                    "description": "Path to 'rpmlint' command",
                    "scope": "machine"
                },
                "rpmspec.lsp": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable RPM spec language server (rpm_lsp_server)",
                    "scope": "machine"
                },
                "rpmspec.lspPath": {
                    "type": "string",
                    "default": "rpm_lsp_server",
                    "description": "Path to 'rpm_lsp_server' command",
                    "scope": "machine"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": ">=20",
        "@types/vscode": ">=1.100.0",
        "@vscode/vsce": "^3.7.1",
        "ovsx": "^0.10.8",
        "typescript": "^5.9.3"
    },
    "overrides": {
        "minimatch": "^3.0.5",
        "brace-expansion": "^1.1.12",
        "parse-semver": {
            "semver": "^5.7.2"
        }
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}
